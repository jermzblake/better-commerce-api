{
  "name": "better-commerce-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "index": "ts-node index.ts",
    "start": "node dist/src/server/server.js",
    "docker:dev": "docker-compose up --build",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts --exec 'ts-node' src/server/server.ts",
    "migrate:dev": "yarn prisma migrate dev --name $1",
    "migrate:reset": "yarn prisma migrate reset",
    "migrate:prod": "yarn prisma migrate deploy",
    "migrate:create-only": "yarn prisma migrate dev --create-only"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@prisma/client": "^4.12.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^18.15.11",
    "@types/request": "^2.48.8",
    "bcrypt": "^5.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.4.0",
    "koa-helmet": "^7.0.2",
    "koa-router": "^12.0.0",
    "nodemon": "^2.0.22",
    "pg": "^8.10.0",
    "prisma": "^4.12.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0"
  }
}
